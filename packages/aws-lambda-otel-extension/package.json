{
  "name": "@serverless/aws-lambda-otel-extension",
  "version": "0.0.0",
  "devDependencies": {
    "adm-zip": "^0.5.9",
    "essentials": "^1.2.0",
    "fs2": "^0.3.9"
  },
  "license": "MIT",
  "scripts": {
    "build": "./scripts/build.js",
    "test": "mocha \"test/**/*.test.js\""
  },
  "eslintConfig": {
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/scripts/**",
            "**/test/**",
            "prettier.config.js"
          ],
          "packageDir": [
            "./",
            "./packages",
            "./packages/aws-lambda-otel-extension"
          ]
        }
      ]
    }
  },
  "mocha": {
    "require": [
      "@serverless/test/setup/patch",
      "@serverless/test/setup/log",
      "@serverless/test/setup/mock-homedir",
      "@serverless/test/setup/mock-cwd",
      "@serverless/test/setup/restore-env"
    ]
  }
}
