{
  "name": "@serverless/aws-lambda-otel-extension",
  "repository": "serverless/runtime",
  "version": "0.2.1",
  "author": "Serverless, Inc.",
  "dependencies": {
    "adm-zip": "^0.5.9",
    "child-process-ext": "^2.1.1",
    "esbuild": "^0.14.21",
    "essentials": "^1.2.0",
    "fs2": "^0.3.9"
  },
  "scripts": {
    "prebuild:prod": "esbuild opt/otel-extension/external/index.js --bundle --platform=node --target=node12 --minify --outfile=opt/build/external/index.js && esbuild opt/otel-extension/internal/index.js --bundle --minify --platform=node --target=node12 --outfile=opt/build/internal/index.js",
    "build:prod": "./scripts/build.prod.js",
    "build": "./scripts/build.js",
    "test": "mocha \"test/unit/**/*.test.js\"",
    "test:isolated": "mocha-isolated \"test/unit/**/*.test.js\"",
    "test:integration": "mocha \"test/integration/**/*.test.js\""
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
